<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/course_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" tools:context=".CourseActivity">

    <TextView
        android:id="@+id/input_college_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="12dp"
        android:text="Select College"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/input_college_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingTop="6dp"/>

    <TextView
        android:id="@+id/input_field_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="6dp"
        android:text="Select Field"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/input_field_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingTop="6dp"/>


    <TextView
        android:id="@+id/input_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:text="Select Courses"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="My Courses" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Options" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/selected_courses"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp" />

        <View
            android:paddingTop="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />


        <ListView
            android:id="@+id/course_options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp" />

    </LinearLayout>


</LinearLayout>