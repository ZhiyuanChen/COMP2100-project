<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/course_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" tools:context=".CourseActivity">

    <TextView
        android:id="@+id/input_college_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="12dp"
        android:text="Select College"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/input_college_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingTop="6dp"/>

    <TextView
        android:id="@+id/input_field_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="6dp"
        android:text="Select Field"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/input_field_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingTop="6dp"/>


    <TextView
        android:id="@+id/input_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="6dp"
        android:text="Select Courses"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="124dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/selected_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/your_courses_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="12dp"
                    android:text="Your courses"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@android:color/darker_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/course_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_option_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:text="Course Options"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>