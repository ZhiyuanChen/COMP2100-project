<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Appearance">

        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:title="Dark Mode" />

        <ListPreference
            app:defaultValue="standard"
            app:entries="@array/themes_entries"
            app:entryValues="@array/themes"
            app:key="themes"
            app:title="Theme"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:title="Background"
            app:key="background" />

    </PreferenceCategory>

    <PreferenceCategory app:title="General">

        <ListPreference
            app:defaultValue="sunday"
            app:entries="@array/day_entries"
            app:entryValues="@array/day"
            app:key="Start of the week"
            app:title="Start of the week"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="60 minutes"
            app:entries="@array/duration_entries"
            app:entryValues="@array/duration"
            app:key="Default event duration"
            app:title="Default event duration"
            app:useSimpleSummaryProvider="true" />



    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
